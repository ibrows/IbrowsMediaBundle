{% block youtube %}
<div class="media youtube" data-title="{{ media.extra.title }}" data-videoid="{{ media.extra.videoid }}">
    <iframe width="550" height="420" src="{{ media.url }}" allowfullscreen></iframe>
</div>
{% endblock %}

{% block soundcloud %}
<div class="media soundcloud">
    {{ media.html|raw }}
</div>
{% endblock %}

{% block image %}
{% set source = params.format is defined ? type.getExtraFileUrl(media, params.format) : null %}
<div class="media image">
    {% if source is not null %}
    <img src="{{ asset(source) }}" alt="{{ media.extra.originalFilename }}" />
    {% else %}
    <img src="{{ asset(media.url) }}" alt="{{ media.extra.originalFilename }}" />
    {% endif %}
</div>
{% endblock %}

{% block file %}
<div class="media file">
    <a href="{{ asset(media.url) }}">{{ media.extra.originalFilename }}</a>
</div>
{% endblock %}
